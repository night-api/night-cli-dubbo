#set($layout = "/layout/layout.vm")
#set($pageTitle = "资源管理 - 新增")
#set($pageScript = "pages/auth/resource/add")


<form class="form-horizontal">
    <input type="hidden" name="category" placeholder="" value="d">
    <input type="hidden" name="pid" placeholder="" value="0">
    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-1 control-label">资源名称</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" placeholder="" value = "">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-1 control-label">排序值</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="seq" placeholder="" value = "">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-1 control-label">资源地址</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="uri" placeholder="" value = "">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3">
            <button type="button" class="btn btn-default" role="cancel">取消</button>
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>

</form>